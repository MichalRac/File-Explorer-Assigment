<Window x:Class="FileExplorer_MichalRac.AccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer_MichalRac"
        mc:Ignorable="d"
        Title="AccessWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="content" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" Margin="5">Read/Write rights:</TextBlock>
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">
            <Button Name="OkBtn" Content="Ok" Width="75" Margin="10" Click="OkBtn_Click"/>
        </WrapPanel>
    </Grid>

</Window>
