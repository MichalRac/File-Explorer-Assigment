<Window x:Class="FileExplorer_MichalRac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:FileExplorer_MichalRac"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.ColumnSpan="2">
            <WrapPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_New"/>
                        <MenuItem Header="_Open"/>
                        <MenuItem Header="_Save"/>
                        <Separator/>
                        <MenuItem Header="_Exit"/>
                    </MenuItem>
                </Menu>
            </WrapPanel>
            <TextBox AcceptsReturn="True"/>
        </DockPanel>

        <TreeView Grid.Row="1" Name="dirView">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type self:DirectoryTreeViewItem}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Title}" Tag="{Binding FullPath}" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <TextBox Name="fText" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
